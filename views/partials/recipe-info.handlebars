<div class="card">
  <div class="card-header">
    <a href="/post/{{id}}"><h2>{{title}}</h2></a>
    <p id="category">Category: {{category}}</p>
    <span class="post-meta">Posted by {{user.username}}</span>
  </div>
  <div class="card-body">
      <div id="image">
          {{image_url}}
      </div>
      <div id="ingredients">
          Ingredients:
          {{ingredients}}
      </div>
      <div id='recipe-steps'>
          Steps: 
          {{recipe_steps}}
      </div>
  </div>
</div>