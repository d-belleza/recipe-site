<div id="fh5co-product">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <h2>Recipes</h2>
            </div>

        </div>

        <div class="row">
            <div class="fh5co-tabs animate-box">
                <!-- Tabs -->
                <ul class="fh5co-tab-nav">
                    <li><a href="/recipes"><span class="icon visible-xs"><i
                                    class="flaticon-salad"></i></span><span class="hidden-xs">View All</span></a>
                    </li>
                    <li><a href="/recipes/category/Appetizers"><span class="icon visible-xs"><i
                                    class="flaticon-appetizer"></i></span><span class="hidden-xs">Appetizers</span></a>
                    </li>
                    <li><a href="/recipes/category/Breakfast"><span class="icon visible-xs"><i
                                    class="flaticon-fried-egg"></i></span><span
                                class="hidden-xs">Breakfast</span></a></li>
                    <li><a href="/recipes/category/Entree"><span class="icon visible-xs"><i
                                    class="flaticon-boiled"></i></span><span class="hidden-xs">Entree</span></a>
                    </li>
                    <li><a href="/recipes/category/Dessert"><span class="icon visible-xs"><i
                                    class="flaticon-piece-of-cake"></i></span><span class="hidden-xs">Desssert</span></a>
                    </li>
                </ul>

                <!-- Tabs Content -->
                <div class="row">
                    
                    <div class="tab-content">
                        <div class="row">
                            {{#each recipes as |recipe|}}
                            {{> recipe-info recipe }}
                            {{/each}}
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>